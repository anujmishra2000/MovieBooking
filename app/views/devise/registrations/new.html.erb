<br><br>
<div class="d-flex flex-column justify-content-center align-items-center">
  <h2><%= t('.header') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form'}) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <div class="form-group">
      <%= f.label :name, t('name') %><br />
      <%= f.text_field :name, class: 'form-control form-control-sm' %>
    </div>

    <div class="form-group">
      <%= f.label :email, t('email') %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control form-control-sm' %>
    </div>

    <div class="form-group">
      <%= f.label :password, t('password') %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control form-control-sm' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, t('password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control form-control-sm' %>
    </div>
    <br>

    <div class="form-actions">
      <div class="text-center">
        <%= f.submit t('.submit'), class: 'btn btn-primary btn-sm' %>
      </div>
    </div>
  <% end %>
  <br>

  <%= render 'devise/shared/links' %>
</div>
