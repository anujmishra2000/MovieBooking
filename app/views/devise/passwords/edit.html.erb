<div class="container-sm">
  <div class="d-flex flex-column justify-content-center align-items-center">
  <br><br>
    <h2 class="h2"><%= t('.instructions') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <br>

      <div class="form-group">
        <%= f.label :password, t('.new_password'), class: 'control-label' %><br />
        <% if @minimum_password_length %>
          <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control' %>
      </div>
      <br>

      <div class="form-group">
        <%= f.label :password_confirmation, t('.confirm_new_password'), class: 'control-label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
      </div>
      <br>

      <div class="form-actions">
        <%= f.submit t('.submit'), class: 'btn btn-primary' %>
      </div>
      <br>
    <% end %>


    <%= render 'devise/shared/links' %>
  </div>
</div>
