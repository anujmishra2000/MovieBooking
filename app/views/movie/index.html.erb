<h1><%= t('.welcome') %>
<% if user_signed_in? %>
  <%= current_user.name %> </h1>
  <%= button_to t('log_out'), destroy_user_session_path, method: :delete %>
  <%= link_to t('reset_password'), edit_user_registration_path		%>
<% else %>
  </h1>
  <%= link_to t('log_in'), new_user_session_path %>
  |
  <%= link_to t('sign_up'), new_user_registration_path %>
<% end %>
