<h1><%= t('.booking_confirmed') %></h1>
<% @order.line_items.each do |line_item| %>
  <%= image_tag attachments["#{line_item.id}.jpg"].url %>
  <h2>Movie: <%= line_item.show.movie_title %></h2>
  <h2>Theatre: <%= line_item.show.theatre_name %></h2>
  <p>Number of seats: <%= line_item.quantity %></p>
  <p>Unit Price: <%= line_item.unit_price %></p>
<% end %><br>
<h2>Total Amount: <%= @order.total %></h2>
