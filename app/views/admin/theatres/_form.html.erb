<!-- new.html.erb -->

<div class="container-sm">
  <%= form_with(model: [:admin,@theatre], local: true, class: "form") do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div><br>

    <div class="form-group">
      <%= form.label :screen_type %>
      <%= form.text_field :screen_type, class: "form-control" %>
    </div><br>

    <div class="form-group">
      <%= form.label :seating_capacity %>
      <%= form.number_field :seating_capacity, class: "form-control" %>
    </div><br>

    <div class="form-group">
      <%= form.label :operational %>
      <%= form.check_box :operational, class: "form-check-input" %>
    </div><br>

    <div class="form-group">
      <%= form.label :contact_number %>
      <%= form.text_field :contact_number, class: "form-control" %>
    </div><br>

    <div class="form-group">
      <%= form.label :contact_email %>
      <%= form.text_field :contact_email, class: "form-control" %>
    </div><br>

    <div class="text-center">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
