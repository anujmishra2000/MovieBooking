<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <%= image_tag(movie.poster, class: "img-fluid movie-image") %>
            </div>
            <div class="col-md-6">
              <h5 class="card-title"><strong><%= movie.title %></strong></h5>
              <hr>
              <p><strong><%= t(:release_date) %>:</strong> <%= movie.release_date %></p>
              <p><strong><%= t(:description) %>:</strong> <%= movie.description %></p>
              <p><strong><%= t(:duration_in_mins) %>:</strong> <%= movie.duration_in_mins %></p>
              <p><strong><%= t(:status) %>:</strong> <%= movie.status %></p>
              <div class="text-end">
                <div class="btn-group">
                  <% if show_button %>
                    <%= link_to t(:show), admin_movie_path(movie), class: "btn btn-primary" %>
                  <% end %>&nbsp;
                  <%= link_to t(:edit), edit_admin_movie_path(movie), class: "btn btn-primary" %>&nbsp;
                  <%= button_to t(:destroy), admin_movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
</div>
